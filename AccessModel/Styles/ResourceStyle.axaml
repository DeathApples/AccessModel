<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="Grid">
        <Style.Setters>
            <Setter Property="Background" Value="#343434" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Action">
        <Style.Setters>
            <Setter Property="Margin" Value="4, 8" />
            <Setter Property="Width" Value="68" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Action > StackPanel">
        <Style.Setters>
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="Spacing" Value="18" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Action > StackPanel > Button:pointerover /template/ ContentPresenter">
        <Style.Setters>
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="100%, 0%" EndPoint="0%, 100%">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="#245c6c" />
                        <GradientStop Offset="1" Color="#602763" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter>
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Action > StackPanel > Button:pressed /template/ ContentPresenter">
        <Style.Setters>
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="100%, 0%" EndPoint="0%, 100%">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="#2f4f58" />
                        <GradientStop Offset="1" Color="#502d52" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter>
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Action > StackPanel > Button">
        <Style.Setters>
            <Setter Property="Padding" Value="2" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Background" Value="Transparent" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Resource">
        <Style.Setters>
            <Setter Property="Margin" Value="8" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="#343434" />
            <Setter Property="BorderBrush" Value="DimGray" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Resource > ScrollViewer">
        <Style.Setters>
            <Setter Property="Margin" Value="6" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Resource > ScrollViewer > ItemsControl">
        <Style.Setters>
            <Setter Property="Background" Value="#343434" />
            <Setter Property="ItemsPanel">
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter>
        </Style.Setters>
    </Style>
    
    <Style Selector="Button#DocumentButton:pointerover /template/ ContentPresenter">
        <Style.Setters>
            <Setter Property="TextBlock.Foreground" Value="Snow" />
            <Setter Property="Background" Value="#292929" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Button#DocumentButton:pressed /template/ ContentPresenter">
        <Style.Setters>
            <Setter Property="TextBlock.Foreground" Value="Snow" />
            <Setter Property="Background" Value="#202020" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Button#DocumentButton">
        <Style.Setters>
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="Transparent" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Border.Resource > ScrollViewer > ItemsControl > Image">
        <Style.Setters>
            <Setter Property="Height" Value="128" />
            <Setter Property="Width" Value="128" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Button#DocumentButton > StackPanel > TextBlock">
        <Style.Setters>
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
        </Style.Setters>
    </Style>
    
    <Style Selector="Image">
        <Style.Setters>
            <Setter Property="Stretch" Value="None" />
        </Style.Setters>
    </Style>
    
    <Style Selector="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="Snow" />
        </Style.Setters>
    </Style>
    
</Styles>
