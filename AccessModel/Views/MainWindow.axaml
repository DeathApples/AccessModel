<Window xmlns="https://github.com/avaloniaui" mc:Ignorable="d"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AccessModel.ViewModels"
        x:Class="AccessModel.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        d:DesignWidth="1242" d:DesignHeight="752">
    
    <Window.Styles>
        <StyleInclude Source="/Styles/MainStyle.axaml" />
    </Window.Styles>
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *, Auto">
        
        <Border Grid.Row="0" Classes="User">
            <StackPanel>
                <Image Source="/Assets/account.png" />
                <TextBlock Text="{Binding User.Name}" />
            </StackPanel>
        </Border>
        
        <Border Grid.Row="0" Classes="Exit">
            <StackPanel>
                <Button IsVisible="{Binding User.Role.IsPrivileged}" Content="ПОЛЬЗОВАТЕЛИ" />
                <Button Content="ВЫХОД" />
            </StackPanel>
            
        </Border>
        
        <ContentControl Grid.Row="1" Content="{Binding ResourceViewModel}" />
        
        <Border Grid.Row="2" Classes="Status">
            <TextBlock Text="{Binding Status}" />
        </Border>
        
    </Grid>

</Window>
