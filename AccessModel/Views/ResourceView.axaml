<UserControl xmlns="https://github.com/avaloniaui" mc:Ignorable="d"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AccessModel.ViewModels"
             x:Class="AccessModel.Views.ResourceView"
             x:DataType="vm:ResourceViewModel"
             d:DesignWidth="800" d:DesignHeight="650">
    
    <UserControl.Styles>
        <StyleInclude Source="/Styles/ResourceStyle.axaml" />
    </UserControl.Styles>
    
    <Design.DataContext>
        <vm:ResourceViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="2*, Auto, *">
        
        <Border Grid.Column="1" Classes="Action">
            <StackPanel>
                <Button>
                    <Image Source="/Assets/entry-add.png" />
                </Button>
                <Button>
                    <Image Source="/Assets/entry-edit.png" />
                </Button>
                <Button>
                    <Image Source="/Assets/entry-rename.png" />
                </Button>
                <Button>
                    <Image Source="/Assets/entry-remove.png" />
                </Button>
                <Button>
                    <Image Source="/Assets/entry-sec.png" />
                </Button>
            </StackPanel>
        </Border>
        
        <Border Grid.Column="0" Classes="Resource">
            <ScrollViewer>
                <ItemsControl Items="{Binding ResourceList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton x:Name="ResourceButton">
                                <StackPanel Orientation="Vertical">
                                    <Image Source="/Assets/document.png" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <Border Grid.Column="2" Classes="Resource">
            <Grid Margin="6">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="276" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MinHeight="160" />
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Classes="Document">
                    <StackPanel>
                        
                        <TextBlock Text="Наименование документа" />
                        <TextBox IsEnabled="False" Text="01" />
                        
                        <TextBlock Text="Текущие права" />
                        <StackPanel Classes="Permissions">
                            <StackPanel>
                                <CheckBox Margin="5, 0" />
                                <TextBlock Text="Own" />
                            </StackPanel>
                            <StackPanel>
                                <CheckBox Margin="6, 0" />
                                <TextBlock Text="Read" />
                            </StackPanel>
                            <StackPanel>
                                <CheckBox Margin="6, 0" />
                                <TextBlock Text="Write" />
                            </StackPanel>
                            <StackPanel>
                                <CheckBox Margin="-1, 0" />
                                <TextBlock Text="TG" />
                            </StackPanel>
                        </StackPanel>
                        
                        <TextBlock Text="Владелец" />
                        <TextBox IsEnabled="False" Text="Администратор" />
                        
                        <TextBlock Text="Дата создания" />
                        <TextBox IsEnabled="False" Text="22.03.2024 00:00:00" />
                        
                    </StackPanel>
                </Border>
                
                <GridSplitter Grid.Row="1"  />
                
                <Border Grid.Row="2" Classes="Content">
                    <TextBox Text="Hello" /> 
                </Border>
                
            </Grid>
        </Border>
        
    </Grid>
    
</UserControl>
